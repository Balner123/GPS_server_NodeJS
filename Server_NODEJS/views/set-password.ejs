<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs', {title: 'Set Your Password'}) %>
</head>
<body>
    <%- include('partials/_navbar.ejs') %>

    <div class="content-wrapper">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card fade-in-on-load" style="animation-delay: 0.1s;">
                        <div class="card-body">
                            <h3 class="card-title text-center mb-4">Set Your Account Password</h3>
                            <p class="text-center text-muted">To complete your account setup and enable all features (like external device access), please set a password.</p>
                            
                            <% if (error && error.length > 0) { %>
                                <div class="alert alert-danger"><%= error %></div>
                            <% } %>

                            <form action="/api/auth/set-initial-password" method="POST">
                                <div class="mb-3">
                                    <label for="newPassword" class="form-label">New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                        <button class="input-group-text border-start-0 bg-white" type="button" id="toggleNewPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                        <button class="input-group-text border-start-0 bg-white" type="button" id="toggleConfirmPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="use_weak_password" name="use_weak_password" value="true">
                                    <label class="form-check-label" for="use_weak_password">Use a weak password</label>
                                    <small class="form-text text-muted d-block">Bypasses complexity requirements. Minimum 3 characters.</small>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Set Password and Continue</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setupHoldToShow('newPassword', 'toggleNewPassword');
            setupHoldToShow('confirmPassword', 'toggleConfirmPassword');
        });
    </script>
</body>
</html>

<!-- Universal Input Modal -->
<div class="modal fade" id="inputModal" tabindex="-1" aria-labelledby="inputModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inputModalLabel">Enter Value</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="inputModalBodyText"></p>
        <div class="mb-3">
          <label for="inputModalField" class="form-label" id="inputModalFieldLabel">Name</label>
          <input type="text" class="form-control" id="inputModalField" required>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="inputConfirmActionButton">Confirm</button>
      </div>
    </div>
  </div>
</div>
<script>
    // Shared function to set up hold-to-show password functionality
    function setupHoldToShow(inputId, buttonId) {
        const input = document.getElementById(inputId);
        const button = document.getElementById(buttonId);
        // Ensure elements exist before adding listeners
        if (!input || !button) return;

        const icon = button.querySelector('i');
        if (!icon) return;

        const showPassword = () => {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        };

        const hidePassword = () => {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        };

        button.addEventListener('mousedown', showPassword);
        button.addEventListener('mouseup', hidePassword);
        button.addEventListener('mouseleave', hidePassword);
        button.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Prevent potential conflicts with other touch events
            showPassword();
        });
        button.addEventListener('touchend', hidePassword);
    }
</script>


<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs', {title: 'Dashboard'}) %>
</head>
<body>
    <%- include('partials/_preloader.ejs') %>
    <%- include('partials/_navbar.ejs') %>

    <div class="content-wrapper">
        <div class="container mt-4">
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <% success.forEach(function(msg){ %><p class="mb-0"><%= msg %></p><% }); %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                     <% error.forEach(function(msg){ %><p class="mb-0"><%= msg %></p><% }); %>
                     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>


            <div class="row">
                <div class="col-md-8">
                    <div class="card fade-in-on-load" style="animation-delay: 0.2s;">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Live Map</h5>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="info-toggle-switch" checked>
                                <label class="form-check-label" for="info-toggle-switch">Show Info</label>
                            </div>
                        </div>
                        <div class="card-body">
                            <div id="map" style="height: 500px;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card fade-in-on-load" style="animation-delay: 0.2s;">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Device List</h5>
                            <a href="/devices" class="btn btn-sm btn-outline-primary" id="home-device-list-link" style="display: none;">Show All Devices</a>
                        </div>
                        <div class="card-body">
                            <div id="devices-list"></div>
                        </div>
                    </div>

                    <div class="card mt-4 fade-in-on-load" style="animation-delay: 0.3s;">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                Active Alerts
                            </h5>
                            <a href="/alerts" class="btn btn-sm btn-outline-primary">View All Alerts</a>
                        </div>
                        <div class="card-body">
                            <% if (typeof alerts !== 'undefined' && alerts.length > 0) { %>
                                <div class="list-group">
                                    <% alerts.forEach(alert => { %>
                                        <% 
                                            let bgColorClass = 'bg-danger'; // Default for geofence
                                            let iconClass = 'fa-exclamation-triangle text-white'; // Icon white
                                            let textColorClass = 'text-white'; // Text white

                                            if (alert.type === 'geofence_return') {
                                                bgColorClass = 'bg-info'; // Changed to info for return
                                                iconClass = 'fa-info-circle text-white'; // Icon white
                                                textColorClass = 'text-white'; // Text white
                                            }
                                        %>
                                        <a href="/devices?id=<%= alert.Device.device_id %>" class="list-group-item list-group-item-action flex-column align-items-start mb-2 rounded <%= bgColorClass %>">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1 <%= textColorClass %>">
                                                    <i class="fas <%= iconClass %> me-2"></i>
                                                    <%= alert.Device ? alert.Device.name : 'N/A' %>
                                                </h6>
                                                <small class="<%= textColorClass %>"><%= new Date(alert.created_at).toLocaleString() %></small>
                                            </div>
                                            <small class="badge bg-secondary text-light"><%= alert.type %></small>
                                        </a>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <p class="text-muted">No active alerts.</p>
                            <% } %>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/common.js"></script>
    <script src="/js/index.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs', {title: 'Dashboard'}) %>
</head>
<body>
    <%- include('partials/_navbar.ejs') %>

    <div class="content-wrapper">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Live Map</h5>
                        </div>
                        <div class="card-body">
                            <div id="map" style="height: 500px;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Device List</h5>
                        </div>
                        <div class="card-body">
                            <div id="devices-list"></div>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Active Alerts</h5>
                        </div>
                        <div class="card-body">
                            <% if (typeof alerts !== 'undefined' && alerts.length > 0) { %>
                                <ul class="list-group list-group-flush">
                                    <% alerts.forEach(alert => { %>
                                        <li class="list-group-item list-group-item-danger">
                                            <a href="/devices?id=<%= alert.Device.device_id %>" class="text-decoration-none text-dark">
                                                <strong><%= alert.Device.name || alert.Device.device_id %>:</strong>
                                                <p class="mb-1"><%= alert.message %></p>
                                                <small class="text-muted"><%= new Date(alert.created_at).toLocaleString() %></small>
                                            </a>
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else { %>
                                <p class="text-muted">No active alerts.</p>
                            <% } %>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/common.js"></script>
    <script src="/js/index.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs', {title: 'Settings'}) %>
    <style>
        .card-danger {
            border-left: 4px solid #dc3545;
        }
    </style>
</head>
<body>
    <%- include('partials/_preloader.ejs') %>
    <%- include('partials/_navbar.ejs') %>

    <div class="content-wrapper">
        <div class="container mt-4">
            <h2 class="mb-4">Account settings</h2>

            <% if (success && success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <% success.forEach(function(msg){ %><p class="mb-0"><%= msg %></p><% }); %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                     <% error.forEach(function(msg){ %><p class="mb-0"><%= msg %></p><% }); %>
                     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4 fade-in-on-load" style="animation-delay: 0.1s;">
                        <div class="card-body">
                            <h5 class="card-title">Change email</h5>
                            <% if (user.provider === 'local') { %>
                                <form action="/api/settings/email" method="POST">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required pattern="^[^@\s]+@[^@\s]+\.[^@\s]+$" title="Zadejte platnÃ½ email">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save new email</button>
                                </form>
                            <% } else { %>
                                <form>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" disabled>
                                        <small class="form-text text-muted">Your email is managed by your identity provider (<%= user.provider %>) and cannot be changed here.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary" disabled>Save new email</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                    <div class="card mb-4 fade-in-on-load" style="animation-delay: 0.2s;">
                        <div class="card-body">
                            <h5 class="card-title">Change username</h5>
                            <form action="/api/settings/username" method="POST">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Save new username</button>
                            </form>
                        </div>
                    </div>

                    <div class="card card-danger fade-in-on-load" style="animation-delay: 0.3s;">
                         <div class="card-body">
                            <h5 class="card-title text-danger">Danger zone</h5>
                            <p class="card-text">Deleting your account is irreversible. All your data, including registered devices and their history, will be permanently deleted.</p>
                            <form action="/api/settings/delete-account" method="POST" id="deleteAccountForm">
                                    <button type="button" id="deleteAccountBtn" class="btn btn-danger">Permanently delete my account</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Right column: Change password -->
                <div class="col-md-6">
                    <% if (user.provider !== 'local' && (!user.password || user.password.trim() === '')) { %>
                        <div class="card border-primary fade-in-on-load" style="animation-delay: 0.1s;">
                            <div class="card-body">
                                <h5 class="card-title">Set Your Account Password</h5>
                                <p class="card-text">To use your account with external devices (hardware or apps), you need to set a password.</p>
                                <form action="/api/settings/set-password" method="POST">
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">New Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                            <button class="input-group-text border-start-0 bg-white" type="button" id="toggleNewPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                            <button class="input-group-text border-start-0 bg-white" type="button" id="toggleConfirmPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="use_weak_password_set" name="use_weak_password" value="true">
                                        <label class="form-check-label" for="use_weak_password_set">Use a weak password</label>
                                        <small class="form-text text-muted d-block">Bypasses complexity requirements. Minimum 3 characters.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Set Password</button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Form to CHANGE existing password -->
                        <div class="card fade-in-on-load" style="animation-delay: 0.1s;">
                            <div class="card-body">
                                <h5 class="card-title">Change Password</h5>
                                <form action="/api/settings/password" method="POST">
                                    <div class="mb-3">
                                        <label for="oldPassword" class="form-label">Old Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                                            <button class="input-group-text border-start-0 bg-white" type="button" id="toggleOldPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">New Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                            <button class="input-group-text border-start-0 bg-white" type="button" id="toggleNewPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                            <button class="input-group-text border-start-0 bg-white" type="button" id="toggleConfirmPassword" tabindex="-1" style="border-radius: 0 0.375rem 0.375rem 0; border-left: none; padding: 0 0.75rem;">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="use_weak_password" name="use_weak_password" value="true">
                                        <label class="form-check-label" for="use_weak_password">Use a weak password</label>
                                        <small class="form-text text-muted d-block">Bypasses complexity requirements. Minimum 3 characters.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setupHoldToShow('oldPassword', 'toggleOldPassword');
            setupHoldToShow('newPassword', 'toggleNewPassword');
            setupHoldToShow('confirmPassword', 'toggleConfirmPassword');

            const deleteAccountBtn = document.getElementById('deleteAccountBtn');
            if (deleteAccountBtn) {
                deleteAccountBtn.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevent any default button action
                    showConfirmationModal({
                        title: 'Confirm Account Deletion',
                        body: 'Are you sure you want to permanently delete your account? This action is irreversible and all your data will be lost.',
                        confirmText: 'Delete My Account',
                        confirmClass: 'btn-danger',
                        onConfirm: () => {
                            document.getElementById('deleteAccountForm').submit();
                        }
                    });
                });
            }
        });
    </script>
</body>
</html> 
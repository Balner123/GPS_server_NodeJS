<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nastavení účtu - GPS Tracking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/_navbar', { currentPage: 'user-settings' }) %>

    <div class="container mt-4">
        <h1>Nastavení účtu</h1>
        <hr>

        <% if (locals.success_message) { %>
            <div class="alert alert-success" role="alert">
                <%= success_message %>
            </div>
        <% } %>
        <% if (locals.error_message) { %>
            <div class="alert alert-danger" role="alert">
                <%= error_message %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">Změna uživatelského jména</div>
                    <div class="card-body">
                        <form action="/user_settings/username" method="POST">
                            <div class="mb-3">
                                <label for="currentUsername" class="form-label">Aktuální uživatelské jméno:</label>
                                <input type="text" class="form-control" id="currentUsername" name="currentUsername" value="<%= currentUser.username %>" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="newUsername" class="form-label">Nové uživatelské jméno:</label>
                                <input type="text" class="form-control" id="newUsername" name="newUsername" required>
                                <% if (locals.errors_username && locals.errors_username.find(e => e.path === 'newUsername')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= locals.errors_username.find(e => e.path === 'newUsername').msg %>
                                    </div>
                                <% } %>
                            </div>
                            <button type="submit" class="btn btn-primary">Změnit jméno</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">Změna hesla</div>
                    <div class="card-body">
                        <form action="/user_settings/password" method="POST">
                            <div class="mb-3">
                                <label for="oldPassword" class="form-label">Staré heslo:</label>
                                <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                                <% if (locals.errors_password && locals.errors_password.find(e => e.path === 'oldPassword')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= locals.errors_password.find(e => e.path === 'oldPassword').msg %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">Nové heslo:</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                <% if (locals.errors_password && locals.errors_password.find(e => e.path === 'newPassword')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= locals.errors_password.find(e => e.path === 'newPassword').msg %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Potvrďte nové heslo:</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                <% if (locals.errors_password && locals.errors_password.find(e => e.path === 'confirmPassword')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= locals.errors_password.find(e => e.path === 'confirmPassword').msg %>
                                    </div>
                                <% } %>
                            </div>
                            <button type="submit" class="btn btn-primary">Změnit heslo</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 